# rarb configuration - managed by Ansible

# Wallet
PRIVATE_KEY={{ private_key }}
WALLET_ADDRESS={{ wallet_address }}

# Polymarket L2 API Credentials
POLY_API_KEY={{ poly_api_key }}
POLY_API_SECRET={{ poly_api_secret }}
POLY_API_PASSPHRASE={{ poly_api_passphrase }}

# Network
POLYGON_RPC_URL={{ polygon_rpc_url | default('https://polygon-rpc.com') }}
CHAIN_ID={{ chain_id | default('137') }}

# Trading Parameters
MIN_PROFIT_THRESHOLD={{ min_profit_threshold | default('0.005') }}
MAX_POSITION_SIZE={{ max_position_size | default('100') }}
MAX_DAYS_UNTIL_RESOLUTION={{ max_days_until_resolution | default('7') }}
DRY_RUN={{ dry_run | default('true') }}

# SOCKS5 Proxy (for order placement)
SOCKS5_PROXY_HOST={{ proxy_host }}
SOCKS5_PROXY_PORT={{ proxy_port | default('1080') }}
SOCKS5_PROXY_USER={{ proxy_user }}
SOCKS5_PROXY_PASS={{ proxy_pass }}

# Dashboard (no authentication)
# DASHBOARD_USERNAME=
# DASHBOARD_PASSWORD=

# Slack notifications (optional)
{% if slack_webhook_url is defined %}
SLACK_WEBHOOK_URL={{ slack_webhook_url }}
{% endif %}
